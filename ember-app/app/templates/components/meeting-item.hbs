{{flexberry-simpledatetime
    type="date"
    readonly=readonly
    value=meetingDate
    class=(if (v-get validationModel "date" "isInvalid") "error")
    data-test-i-i-s-book-club-2-1-meeting-e-date=true
}}

<div class="table-data">
    <div>
        <div>
            Спикер
        </div>
        <div>
            Книга
        </div>
        <div>
            Автор
        </div>
    </div>
    {{#each presentations as |presentation|}}
    <div>
        <div>
        {{flexberry-field
            value=presentation.speakerFullName
            placeholder=placeholder
            readonly=true
            class=class
            maxlength=maxlength
        }}
        </div>
        <div>
        {{flexberry-textbox
            value=presentation.bookTitle
            placeholder=placeholder
            readonly=true
            class=class
            maxlength=maxlength
        }}
        </div>
        <div>
        {{flexberry-textbox
            value=presentation.bookAuthor
            placeholder=placeholder
            readonly=true
            class=class
            maxlength=maxlength
        }}
        </div>
    </div>
    {{/each}}
</div>
